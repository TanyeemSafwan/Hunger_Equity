<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#063D8F"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_username_1"
            android:text="Random"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            />
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_information_1"
            android:layout_marginTop="10dp"

            android:text="have accepted your request"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="of "
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/notification_title_1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 apples"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>


    </LinearLayout>
    <TextView
        android:id="@+id/notification_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"
        />

</LinearLayout>